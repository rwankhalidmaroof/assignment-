    // Q4: Reverse an array
    public void q4_reverse(int[] arr) {
        for(int i = 0; i < arr.length / 2; i++) {
            int temp = arr[i];
            arr[i] = arr[arr.length - i - 1];
            arr[arr.length - i - 1] = temp;
        }
    }

    // --- Linked List Part ---

    // Q5: Concatenate two lists
    public void q5_join(Node list1, Node list2) {
        Node temp = list1;
        while(temp.next != null) temp = temp.next;
        temp.next = list2;
    }

    // Q8 & 9: Search for element and return position
    public int q8_q9_search(Node head, int val) {
        Node temp = head;
        int index = 0;
        while(temp != null) {
            if(temp.data == val) return index;
            temp = temp.next;
            index++;
        }
        return -1; [span_14](start_span)// Not found[span_14](end_span)
    }

