    // Q13: Reverse traverse (Doubly Linked List)
    public void q13_printReverse(Node tail) {
        Node temp = tail;
        while(temp != null) {
            System.out.println(temp.data);
            temp = temp.prev;
        }
    }

    // Q17: Search in circular linked list
    public boolean q17_searchCircular(Node head, int key) {
        Node temp = head;
        if(head == null) return false;
        do {
            if(temp.data == key) return true;
            temp = temp.next;
        } while(temp != head);
        return false;
    }
}
